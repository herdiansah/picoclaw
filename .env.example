DB_PATH=/app/history.db
SQLITE_INIT=true
MAX_HISTORY=20
FORGET_COMMAND_ENABLED=true

# ── Server ────────────────────────────────
PORT=18790
LOG_LEVEL=info

# ── Timezone ──────────────────────────────
TZ=Asia/Tokyo
